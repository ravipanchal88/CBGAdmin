extends ../layout

block content
	.fluid-container
		.row
			.col-lg-12.col-md-12
				h1= title
				p Welcome to CBG Admin Login Page - #{title}
		.row
			.col-lg-4.col-md-4
				h1 Log In
				form(action='/user/login', method='post')
					.form-group
						label(for='username') Email
						input.form-control(name='username', autofocus)
					.form-group
						label(for='password') Password
						input.form-control(name='password', type='password')
					.form-group
						input.btn.btn-primary.btn-lg(type='submit', value='Log In')